<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="vertical"
    tools:context=".CreatePostHome">

    <include layout="@layout/toolbar_main" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_text_post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:background="@layout/rounded_border_edittext"
                android:gravity="top"
                android:hint="Start writing your tips and tricks with users.."
                android:inputType="textMultiLine"
                android:maxLines="8"
                android:minLines="6"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:gravity="left"
                android:text="Select Subject:"
                android:textColor="@android:color/black" />

            <android.support.design.chip.ChipGroup
                android:id="@+id/chipGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                app:singleSelection="true">

                <android.support.design.chip.Chip
                    android:id="@+id/chip_algo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="Algorithm"
                    android:textColor="@color/bg_chip_text_state_list"
                    app:chipBackgroundColor="@color/bg_chip_state_list" />

                <android.support.design.chip.Chip
                    android:id="@+id/chip_ds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="DS"
                    android:textColor="@color/bg_chip_text_state_list"
                    app:chipBackgroundColor="@color/bg_chip_state_list" />

                <android.support.design.chip.Chip
                    android:id="@+id/chip_compiler"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="Compiler"
                    android:textColor="@color/bg_chip_text_state_list"
                    app:chipBackgroundColor="@color/bg_chip_state_list" />

                <android.support.design.chip.Chip
                    android:id="@+id/chip_toc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="TOC"
                    android:textColor="@color/bg_chip_text_state_list"
                    app:chipBackgroundColor="@color/bg_chip_state_list" />

                <android.support.design.chip.Chip
                    android:id="@+id/chip_dbms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="DBMS"
                    android:textColor="@color/bg_chip_text_state_list"
                    app:chipBackgroundColor="@color/bg_chip_state_list" />

                <android.support.design.chip.Chip
                    android:id="@+id/chip_os"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="OS"
                    android:textColor="@color/bg_chip_text_state_list"
                    app:chipBackgroundColor="@color/bg_chip_state_list" />

                <android.support.design.chip.Chip
                    android:id="@+id/chip_digital"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="Digital"
                    android:textColor="@color/bg_chip_text_state_list"
                    app:chipBackgroundColor="@color/bg_chip_state_list" />

                <android.support.design.chip.Chip
                    android:id="@+id/chip_coa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="COA"
                    android:textColor="@color/bg_chip_text_state_list"
                    app:chipBackgroundColor="@color/bg_chip_state_list" />

                <android.support.design.chip.Chip
                    android:id="@+id/chip_cn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="CN"
                    android:textColor="@color/bg_chip_text_state_list"
                    app:chipBackgroundColor="@color/bg_chip_state_list" />

                <android.support.design.chip.Chip
                    android:id="@+id/chip_dm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="Discrete Math"
                    android:textColor="@color/bg_chip_text_state_list"
                    app:chipBackgroundColor="@color/bg_chip_state_list" />

                <android.support.design.chip.Chip
                    android:id="@+id/chip_c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="C"
                    android:textColor="@color/bg_chip_text_state_list"
                    app:chipBackgroundColor="@color/bg_chip_state_list" />

                <android.support.design.chip.Chip
                    android:id="@+id/chip_cpp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="C++"
                    android:textColor="@color/bg_chip_text_state_list"
                    app:chipBackgroundColor="@color/bg_chip_state_list" />

                <android.support.design.chip.Chip
                    android:id="@+id/chip_java"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="Java"
                    android:textColor="@color/bg_chip_text_state_list"
                    app:chipBackgroundColor="@color/bg_chip_state_list" />

                <android.support.design.chip.Chip
                    android:id="@+id/chip_python"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="Python"
                    android:textColor="@color/bg_chip_text_state_list"
                    app:chipBackgroundColor="@color/bg_chip_state_list" />

                <android.support.design.chip.Chip
                    android:id="@+id/chip_android"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="Android"
                    android:textColor="@color/bg_chip_text_state_list"
                    app:chipBackgroundColor="@color/bg_chip_state_list" />

                <android.support.design.chip.Chip
                    android:id="@+id/chip_others"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="Others"
                    android:textColor="@color/bg_chip_text_state_list"
                    app:chipBackgroundColor="@color/bg_chip_state_list" />
            </android.support.design.chip.ChipGroup>


            <TextView
                android:id="@+id/image_path"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:textColor="@android:color/black"
                android:textSize="10sp" />

            <android.support.v7.widget.CardView
                android:id="@+id/cv_open_image"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_alignParentBottom="true"
                android:onClick="addAttachment"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/my_custom_background">

                    <ImageView
                        android:id="@+id/iv_upload_image"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="0.15"
                        android:paddingLeft="10dp" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="0.15"
                        android:src="@drawable/ic_photo_camera_black_24dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="@string/add_image_or_pdf"
                        android:textColor="@color/green"
                        android:textSize="17sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <Button
                android:id="@+id/btn_post"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:background="@color/colorPrimary"
                android:text="POST"
                android:textColor="#fff"
                android:textSize="20sp" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>